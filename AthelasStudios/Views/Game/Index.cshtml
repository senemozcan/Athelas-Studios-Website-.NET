@model GameListViewModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("GameFilterMenu")
        @* <div games="" number="3"></div> *@
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Game game in Model.Games)
            {
                <partial name="_GameCard" model="@game" />
            }
        </div>
        <div>
            <div 
            page-model="@Model?.Pagination" 
            page-action="Index"
            page-classes-enabled ="true"
            page-class ="btn"
            page-class-normal ="btn-outline-dark"
            page-class-selected="btn-primary"
            class="btn-group" > 
            </div>
        </div>
    </div>
</div>
