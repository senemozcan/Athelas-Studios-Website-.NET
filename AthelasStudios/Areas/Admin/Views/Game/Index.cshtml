@model IEnumerable<Game>

<div class="text-center">
    <div class="display-6"> Games </div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image Url</th>
                <th>Games Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Game game in Model)
            {
                <tr>
                    <td>@game.GameId</td>
                    <td>
                        <img class="border border-light rounded" src="@game.ImageUrl" alt="@game?.GameName" width="50"
                            height="50s">
                    </td>
                    <td>@game.GameName</td>
                    <td>@game.GamePrice.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a 
                                data-toggle="tooltip" 
                                data-placement="top" 
                                title="Edit"
                                class="btn btn-warning" 
                                asp-action="Update" 
                                asp-route-id="@game.GameId">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a 
                                data-toggle="tooltip" 
                                data-placement="top" 
                                title="Delete"
                                class="btn btn-danger" 
                                asp-action="Delete" 
                                asp-route-id="@game.GameId">
                                <i class="fa fa-trash"></i>
                            </a>
                            <a 
                                data-toggle="tooltip" 
                                data-placement="top" 
                                title="Web
                                class="btn btn-info" 
                                target="_blank" 
                                asp-area="" 
                                asp-controller="Game" 
                                asp-action="Get"
                                asp-route-id="@game.GameId">
                                <i class="fa fa-search"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}